{
  "name": "ffxiv-9card",
  "version": "0.0.5",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:tsc": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "electron:serve": "cross-env NODE_ENV=development electron .",
    "electron:pre": "cross-env NODE_ENV=pre vite build && electron .",
    "electron:build": "cross-env NODE_ENV=production vite build && electron-builder"
  },
  "build": {
    "appId": "pro.zhantss.ffxiv.9card",
    "productName": "ffxiv-9card",
    "files": [
      "dist/**",
      "public/**",
      "main.js",
      "preload.js",
      "electron/**"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon_256.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/favicon_256.ico",
      "installerHeaderIcon": "public/favicon_256.ico",
      "deleteAppDataOnUninstall": true
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist/electron"
    }
  },
  "dependencies": {
    "dexie": "^3.2.2",
    "fuse.js": "^6.4.6",
    "lodash": "^4.17.21",
    "vue": "^3.2.16",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vicons/material": "^0.11.0",
    "@vicons/tabler": "^0.12.0",
    "@vitejs/plugin-vue": "^1.9.3",
    "cross-env": "^7.0.3",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-vue": "^7.19.1",
    "naive-ui": "^2.29.1",
    "pinyin-pro": "^3.3.1",
    "sass": "^1.43.2",
    "typescript": "^4.4.3",
    "vfonts": "^0.1.0",
    "vite": "^2.6.4",
    "vue-tsc": "^0.3.0"
  }
}
